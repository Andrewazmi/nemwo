<section class="s-block">
	<div class="container flex flex-col items-center justify-center store-features">
		<h1 class="mb-8 mb-10 text-5xl font-black text-black">
			{{component.title}}</h1>
		<p class="mt-2 mb-24 text-4xl text-black subtitle-feaures">{{component.subtitle}}</p>
		<div class="flex items-center justify-between grid-feattures">
			{% for link in component.card_store %}
				<div class="flex flex-col items-center justify-center h-64 p-1 bg-white border-2 rounded-lg even:mx-7 border-slate-600 w-96 card-store-features">
					<div class="flex items-center justify-center p-4 mb-5 bg-gray-400 rounded-full w-28 h-28 image">
						<img class="object-contain w-full h-full" src="{{link.image}}"/>
					</div>
					<h2 class="mb-5 text-2xl font-black">{{ link.title_card }}</h2>
					<p class="text-lg font-bold">{{ link.subtitle_card }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</section>

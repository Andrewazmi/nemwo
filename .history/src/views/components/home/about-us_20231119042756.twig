<section class="s-block">
	<div class="container flex flex-col items-center justify-center store-features">
		<div class="grid grid-cols-4 gap-10 grid-feattures-about">
			{% for link in component.about_us %}
				<div class="flex flex-col items-center justify-center ">
					<div class="flex items-center justify-center rounded-full image">
						<img src="{{link.image}}"/>
					</div>
					<h3>{{ link.number }}</h3>
					<h3>{{ link.title }}</h3>
					<p class="text-center ">{{ link.subtitle }}</p>

				</div>
			{% endfor %}
		</div>
	</div>
</section>

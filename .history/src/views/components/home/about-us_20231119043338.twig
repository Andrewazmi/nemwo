<section class="s-block">
	<div class="container flex flex-col items-center justify-center store-features">
		<div class="grid grid-cols-4 gap-10 grid-feattures-about">
			{% for link in component.about_us %}
				<div class="flex flex-col items-center justify-center ">
					<div class="flex items-center justify-center w-40 h-40 p-10 mb-8 bg-gray-800 rounded-full image">
						<img class="object-contain" src="{{link.image}}"/>
					</div>
					<h3 class="mb-3 text-3xl font-bold text-gray-800">{{ link.number }}</h3>
					<h3 class="mb-3 text-3xl font-bold text-gray-800">{{ link.title }}</h3>
					<p class="text-3xl text-center text-gray-800">{{ link.subtitle }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</section>

{#
| Variable                       | Type     | Description                                                                  |
|--------------------------------|----------|------------------------------------------------------------------------------|
| component                      | object   | Contains merchant settings for fields from twilight.json `component` section |
| component.slides[].image       | string   | Image url                                                                    |
| component.slides[].title       | ?string  |                                                                              |
| component.slides[].description | ?string  |                                                                              |
| component.slides               | object[] | list of slides                                                               |
| position                       | int      | Sorting number start from zero                                               |
#}
<section class="s-block head-edit s-block--hero-slider s-block--full-bg wide-placeholder home-slider"> 
    <salla-slider 
      id="main-slider-{{ position }}" 
      class="home-slider main-slider" 
      show-controls="false"
      auto-play 
      loop
      type="fullwidth">
        <div slot="items">
            {% for slide in component.hero_slider %}
            
                <div class="swiper-lazy-wrap w-full min-h-[500px]">
                    <div data-background="{{ slide.image }}" class="swiper-lazy"></div>
                    <div class="flex items-center container pb-16 sm:pb-0 home-slider__content relative h-full w-full px-10"  style="justify-content : {{slide.content_direction|json_encode()|split('"')[1] }}" >
                        <div class="w-full text-white hero-content flex flex-col items-start gap-4" style="text-align : {{slide.content_direction|json_encode()|split('"')[1] }}">
                            <div class="text-right">
                                <h3 data-swiper-parallax="-500"
                                    class="lg:text-title-size font-bold leading-tight mb-4">{{ slide.title }}</h3>
                                <p data-swiper-parallax="-300" class="line-clamp-2 description mb-4">{{ slide.subtitle }}</p>
                            </div>
                            {% if slide.button %}
                            <a href="{{slide.url}}" class="btn" style="border-radius: 50px ; background-color : {{slide.background_color_button}} ;color : {{slide.text_color_button}};align-self: end">
{{slide.button}}
</a>
                             </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </salla-slider>
</section> 

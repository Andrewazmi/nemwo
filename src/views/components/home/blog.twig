<section class ="s-block container">
    <div class="text-center mb-8 flex flex-col justify-center items-center" >
        <h1 class=" mb-4 ">{{component.title}}</h1>
        <div class="line"></div>    
    </div>

    <salla-slider type="carousel" controls-outer show-controls="false">
        <div slot="items">
            {% for slide in component.blogs %}
                <div class="flex flex-col justify-center items-center space-y-4" style="width: 343px ; align-items: center !important">
                    <a href="{{slide.url}}" class=" w-full" style="height : 350px">
                        <img src="{{slide.image}}" class=" w-full h-full rounded-lg"/>
                    </a>
                    <h2 style="font-weight:  800">
                        {{slide.p}}
                    </h2>
                </div>
            {% endfor %}
        </div>
    </salla-slider>
</section>
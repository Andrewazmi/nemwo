<section class ="s-block container">
    <div class="text-center mb-8 flex flex-col justify-center items-center" >
        <h1 class=" mb-4 ">اراء العملاء</h1>
        <div class="line"></div>    
    </div>

    <salla-slider type="carousel" controls-outer show-controls="false">
        <div slot="items">
            {% for slide in component.rates %}
                <div class="flex flex-col justify-center items-center space-y-4" style="width: 343px">
                <p>{{slide.title}}</p>
        <h2>{{slide.name}}</h2>

    
{% set number = slide.star|json_encode() %}
<div class=" flex">
        {% for i in 1..number %}
            <svg xmlns="http://www.w3.org/2000/svg" width="33" height="30" viewBox="0 0 33 30" fill="none">
                <path d="M16.819 23.5923L26.6047 29.2917L24.0079 18.55L32.6535 11.3226L21.2685 10.3905L16.819 0.26001L12.3694 10.3905L0.984375 11.3226L9.63006 18.55L7.03319 29.2917L16.819 23.5923Z" fill="#FFAC0D"/>
            </svg>
        {% endfor %}
 </div>
        <span class="hidden time-stamp"> {{slide.date}} </span>
       <div class="insert-time"></div>
                </div>
            {% endfor %}
        </div>
    </salla-slider>
</section>
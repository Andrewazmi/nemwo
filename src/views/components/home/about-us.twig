<section class ="s-block">
	<div class="container flex flex-col justify-center items-center store-features">
		<div class="grid-feattures-about">
			{% for link in component.about_us %}
				<div class="flex flex-col justify-center items-center gap-2">
					<div class="image flex justify-center items-center rounded-full">
						<img src="{{link.image}}" />
					</div>
					<h3 class="leading-none">{{ link.number }}</h3>
					<h3 class="leading-none">{{ link.title }}</h3>
					<p class=" text-center">{{ link.subtitle }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
<section class="s-block s-block--categories mt-10 category-star-2">
	<div class="container px-4 category">
		<div class="text-center mb-2 flex flex-col justify-center items-center">
			<h1 class="mb-4">{{component.title}}</h1>
			<p class="mb-4" style="font-size : 30px">{{component.subtitle}}</p>
			<div class="line"></div>

		</div>
		<div class="w-full flex items-center justify-center m-auto">
			<div class="grid-feattures-category justify-around">

				{% for link in component.category_star_2 %}

					<div class="swiper-slide slide--one-sixth cat-hight mb-2">
						<span class="hidden category-value">{{ link.category_name.value[0]|json_encode() }}</span>
						<a class="flex flex-col justify-center items-center api-set-category" data-emergence="hidden" href="">
							<img class="rounded bg-cover mb-2" src="{{link.image}}" style="height: 180px ; border: 4px solid #404553"/>


							<h4 class="category-name"></h4>
							<span class="all-category-belong-product"></span>
						</a>
					</div>


				{% endfor %}
			</div>
		</div>

	</div>

</section>
